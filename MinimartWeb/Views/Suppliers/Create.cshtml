@model MinimartWeb.Model.Supplier

@{
    ViewData["Title"] = "Thêm nhà cung cấp";
}

<div class="container my-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-truck me-2"></i>Thêm nhà cung cấp</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="SupplierName" class="form-label fw-semibold"></label>
                        <input asp-for="SupplierName" class="form-control" />
                        <span asp-validation-for="SupplierName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SupplierPhoneNumber" class="form-label fw-semibold"></label>
                        <input asp-for="SupplierPhoneNumber" class="form-control" />
                        <span asp-validation-for="SupplierPhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SupplierEmail" class="form-label fw-semibold"></label>
                        <input asp-for="SupplierEmail" class="form-control" />
                        <span asp-validation-for="SupplierEmail" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SupplierAddress" class="form-label fw-semibold"></label>
                        <input asp-for="SupplierAddress" class="form-control" />
                        <span asp-validation-for="SupplierAddress" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Lưu nhà cung cấp
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
