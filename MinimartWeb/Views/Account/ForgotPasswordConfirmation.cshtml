@{
    ViewData["Title"] = "Kiểm Tra Email Của Bạn";
}
<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Message != null)
                    {
                        <p class="lead">@ViewBag.Message</p>
                    }
                    else
                    {
                        <p class="lead">Hướng dẫn đặt lại mật khẩu đã được gửi đến địa chỉ email của bạn (nếu tồn tại trong hệ thống). Vui lòng kiểm tra hộp thư đến và cả mục thư rác/spam.</p>
                    }
                    <hr />
                    <p><a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">Về Trang Chủ</a></p>
                </div>
            </div>
        </div>
    </div>
</div>