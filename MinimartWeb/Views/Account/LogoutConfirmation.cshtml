@{
    ViewData["Title"] = "Xác nhận Đăng xuất";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="alert alert-warning" role="alert">
    Bạn có chắc chắn muốn đăng xuất khỏi tài khoản của mình không?
</div>

<form asp-controller="Account" asp-action="Logout" method="post">
    @Html.AntiForgeryToken() <!-- Quan trọng: Thêm token chống giả mạo -->
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-sign-out-alt me-1"></i> Xác nhận Đăng xuất
    </button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <!-- Nút hủy -->
        <i class="fas fa-times me-1"></i> Hủy
    </a>
</form>