@model IEnumerable<MinimartWeb.Model.SaleDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPriceAtPurchase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPriceAtPurchase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sale.DeliveryAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType.ProductDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SaleDetailID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SaleDetailID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SaleDetailID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
