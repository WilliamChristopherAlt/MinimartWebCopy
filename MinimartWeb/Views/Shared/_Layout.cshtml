                <!-- Sidebar Toggle Button (Mobile) -->
                <button class="btn btn-outline-secondary me-2 toggle-sidebar d-lg-none" type="button" id="sidebarToggleBtn">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Toggler -->
