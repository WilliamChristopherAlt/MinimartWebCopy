                            <a id="accountDropdownToggle" class="nav-link d-flex align-items-center" role="button" title="Account">
                                <i class="fas fa-user-circle fa-lg"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

