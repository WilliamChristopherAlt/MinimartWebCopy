<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiniMart</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* ✅ RENDER CUSTOM PAGE STYLES *@
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/MiniMartlogo.png" alt="MiniMart Logo" style="height: 40px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <form class="d-flex ms-lg-4 my-3 my-lg-0 w-100" asp-controller="CustomerProducts" asp-action="Index" method="get">
                    <input class="form-control me-2" type="search" name="searchString" placeholder="Tìm kiếm sản phẩm..." />
                    <button class="btn btn-warning text-white" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>

                <ul class="navbar-nav ms-lg-auto mt-3 mt-lg-0">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg me-1"></i> Tài khoản
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Thông tin cá nhân</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item border-0 bg-transparent w-100 text-start">Đăng xuất</button>
                                    </form>
                                </li>

                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-primary ms-lg-3" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <main class="container pt-5 mt-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-auto">
        <small>© @DateTime.Now.Year MiniMart. All rights reserved.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @* ✅ RENDER CUSTOM PAGE SCRIPTS *@
    @RenderSection("Scripts", required: false)
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

</body>
</html>
