            @*             <a asp-controller="Checkout" asp-action="BuyNow" asp-route-productId="@Model.Id" asp-route-quantity="1" class="btn btn-warning btn-sm product-action-btn"> <i class="fas fa-bolt me-1"></i> Mua ngay </a> *@
            @*         </div> *@
            @*     } *@
            @*     else *@
