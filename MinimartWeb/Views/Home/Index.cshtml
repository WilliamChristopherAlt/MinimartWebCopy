@* Khai báo model là HomePageViewModel *@
@model MinimartWeb.ViewModels.HomePageViewModel
@{
    ViewData["Title"] = "Trang Chủ - MiniMart";
    // Hàm định dạng tiền tệ (có thể đặt trong helper hoặc để tạm ở đây)
    string FormatCurrency(decimal price)
    {
        return price.ToString("N0") + "đ"; // Ví dụ: 100000đ
    }
}

<div class="container mt-4">

    @* --- Phần Hot Deal --- *@
    @if (Model.HotDeals.Any())
    {
        <section class="mb-5">
            <div class="d-flex align-items-center mb-3">
                <h2 class="me-2 mb-0">🔥 HOT DEAL</h2>
                @* Có thể thêm biểu tượng tia sét bằng Font Awesome nếu muốn *@
                @* <i class="fas fa-bolt text-warning fa-lg"></i> *@
            </div>

            @* Sử dụng Bootstrap Grid để hiển thị sản phẩm *@
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3">
                @* Chia cột: 2 trên mobile, 3 trên tablet, 5 trên desktop *@
                @foreach (var product in Model.HotDeals)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm product-card">
                            @* Thêm class product-card để style riêng nếu cần *@
                            <a asp-controller="CustomerProducts" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                                <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "/images/placeholder.png" : $"/images/products/{product.ImagePath}")"
                                     class="card-img-top product-card-img" @* Thêm class để style ảnh *@
                                     alt="@product.Name">
                            </a>
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title product-card-title fw-normal mb-1">
                                    @* Class để style tên SP *@
                                    <a asp-controller="CustomerProducts" asp-action="Details" asp-route-id="@product.Id" class="text-dark text-decoration-none stretched-link">
                                        @* Giới hạn độ dài tên sản phẩm nếu cần *@
                                        @product.Name
                                    </a>
                                </h6>
                                <div class="mt-auto">
                                    @* Đẩy giá và thông tin bán xuống dưới *@
                                    <div class="d-flex align-items-center mb-1">
                                        <span class="text-danger fw-bold me-2">@FormatCurrency(product.Price)</span>
                                        @if (product.DiscountPercent.HasValue)
                                        {
                                            <span class="text-muted text-decoration-line-through me-2 small">@FormatCurrency(product.OriginalPrice ?? 0)</span>
                                            <span class="badge bg-danger rounded-pill small">-@product.DiscountPercent%</span>
                                        }
                                    </div>
                                    @if (product.TotalUnitsSold > 0) @* Chỉ hiển thị nếu đã bán *@
                                    {
                                        <small class="text-muted d-block">Đã bán: @product.TotalUnitsSold</small>
                                    }
                                    @if (product.IsFlashSale)
                                    {
                                        <span class="badge bg-warning text-dark mt-1 small"><i class="fas fa-fire me-1"></i> SẢN PHẨM FLASH SALE</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }

    @* --- Phần Sản phẩm thường --- *@
    <section>
        <h2 class="mb-3">Sản phẩm khác</h2>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3">
            @foreach (var product in Model.RegularProducts)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm product-card">
                        <a asp-controller="CustomerProducts" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none">
                            <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "/images/placeholder.png" : $"/images/products/{product.ImagePath}")"
                                 class="card-img-top product-card-img"
                                 alt="@product.Name">
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title product-card-title fw-normal mb-1">
                                <a asp-controller="CustomerProducts" asp-action="Details" asp-route-id="@product.Id" class="text-dark text-decoration-none stretched-link">
                                    @product.Name
                                </a>
                            </h6>
                            <div class="mt-auto">
                                <div class="d-flex align-items-center mb-1">
                                    <span class="text-danger fw-bold me-2">@FormatCurrency(product.Price)</span>
                                    @if (product.DiscountPercent.HasValue)
                                    {
                                        <span class="text-muted text-decoration-line-through me-2 small">@FormatCurrency(product.OriginalPrice ?? 0)</span>
                                        <span class="badge bg-danger rounded-pill small">-@product.DiscountPercent%</span>
                                    }
                                </div>
                                @if (product.TotalUnitsSold > 0)
                                {
                                    <small class="text-muted d-block">Đã bán: @product.TotalUnitsSold</small>
                                }
                                @if (product.IsFlashSale)
                                {
                                    <span class="badge bg-warning text-dark mt-1 small"><i class="fas fa-fire me-1"></i> SẢN PHẨM FLASH SALE</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @* Thêm nút xem thêm hoặc phân trang nếu cần *@
        @* <div class="text-center mt-4">
        <a href="#" class="btn btn-outline-primary">Xem thêm sản phẩm</a>
        </div> *@
    </section>

</div>

@* Thêm CSS tùy chỉnh nếu cần *@
@section Styles {
    <style>
        .product-card {
            border: 1px solid #e9ecef;
            transition: box-shadow 0.2s ease-in-out;
        }

            .product-card:hover {
                box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
            }

        .product-card-img {
            aspect-ratio: 1 / 1; /* Giữ tỉ lệ vuông cho ảnh */
            object-fit: cover; /* Đảm bảo ảnh fill khung */
        }

        .product-card-title {
            /* Giới hạn tên sản phẩm thành 2 dòng */
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            min-height: 2.5em; /* Đảm bảo chiều cao tối thiểu cho 2 dòng */
            font-size: 0.9rem; /* Điều chỉnh cỡ chữ tên SP */
        }

        .card-body {
            padding: 0.8rem; /* Giảm padding body card */
        }
    </style>
}